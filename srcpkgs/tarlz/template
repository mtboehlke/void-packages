do_configure() {
	./configure --prefix=/usr \
		CXX="${CXX}" \
		CPPFLAGS="${CPPFLAGS}" \
		CXXFLAGS="${CXXFLAGS}" \
		LDFLAGS="${LDFLAGS}"
}
